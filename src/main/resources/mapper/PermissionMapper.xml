<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="duegin.ginDriver.mapper.PermissionMapper">

    <resultMap id="BaseResultMap" type="duegin.ginDriver.domain.model.Permission">
        <id property="permissionId" column="permission_id" jdbcType="BIGINT"/>
        <result property="code" column="code" jdbcType="VARCHAR"/>
        <result property="description" column="description" jdbcType="VARCHAR"/>
        <result property="url" column="url" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        permission_id,code,description,
        url
    </sql>
    <select id="getUserPermissions" resultType="java.lang.String">
        SELECT code
        FROM permission
        WHERE permission_id IN (SELECT permission_id
                     FROM role_permission
                     WHERE role_id IN (SELECT role_id
                                       FROM user_role
                                       WHERE user_id = #{userId}))
    </select>
</mapper>
