    <sql id="Media_Base_Column_List">
        ${alias}id,
        ${alias}file_id,
        ${alias}original_date_time,
        ${alias}adcode,
        ${alias}width,
        ${alias}height,
        ${alias}longitude,
        ${alias}latitude,
        ${alias}`mime_type`,
        ${alias}model,
        ${alias}
    </sql>
    <update id="updateMediaDeleted">
        update `file`
        set deleted = 0
        where id in
        <foreach collection="ids" open="(" close=")" separator="," item="item">
            #{item}
        </foreach>
    </update>
    <select id="selectPageBetweenDate" resultType="com.ginDriver.main.domain.vo.MediaVO">
        select
        <include refid="Media_Base_Column_List">
            <property name="alias" value="m."/>
        </include>
       ,
        <include refid="com.ginDriver.main.mapper.FileMapper.File_Column_List">
            <property name="als" value="f."/>
        </include>
        ,
        f.name fileName,
        u.username
        from media m
        left join `file` f on m.file_id = f.id
        left join user u on f.user_id = u.id
        where f.user_id = #{userId}
            and f.deleted = 0
            and m.original_date_time between #{startDate} and #{endDate}
        order by m.original_date_time desc
    </select>
    <select id="selectByCityAdCode" resultType="com.ginDriver.main.domain.vo.MediaVO">
        select
        <include refid="Media_Base_Column_List">
            <property name="alias" value="m."/>
        </include>
        ,
        <include refid="com.ginDriver.main.mapper.FileMapper.File_Column_List">
            <property name="als" value="f."/>
        </include>
        ,
        f.name fileName,
        u.username
        from media m
        left join `file` f on m.file_id = f.id
        right join place p on m.adcode = p.adcode
        right join user u on m.user_id = u.id
        where f.user_id = #{userId}
        and f.deleted = 0
        and p.city_adcode = #{adcode}
        order by m.original_date_time desc
    </select>
    <select id="selectThatYearTodayByUserId" resultType="com.ginDriver.main.domain.vo.MediaVO">
        select
        <include refid="Media_Base_Column_List">
            <property name="alias" value="m."/>
        </include>
        ,
        <include refid="com.ginDriver.main.mapper.FileMapper.File_Column_List">
            <property name="als" value="f."/>
        </include>
        ,
        f.name fileName,
        u.username
        from media m
        left join file f on m.file_id = f.id
        right join user u on f.user_id = u.id
        where f.user_id = #{userId}
        and f.deleted = 0
        and MONTH(m.original_date_time) = #{month}
        and DAY(m.original_date_time) = #{day}
        order by m.original_date_time desc
        <if test="limit > 0">
            limit #{limit}
        </if>
    </select>
    <select id="selectByProvinceAdCode" resultType="com.ginDriver.main.domain.vo.MediaVO">
        select
        <include refid="Media_Base_Column_List">
            <property name="alias" value="m."/>
        </include>
        ,
        <include refid="com.ginDriver.main.mapper.FileMapper.File_Column_List">
            <property name="als" value="f."/>
        </include>
        ,
        f.name fileName,
        u.username
        from media m left join `file` f on m.file_id = f.id
        right join place p on m.adcode = p.adcode
        right join user u on f.user_id = u.id
        where f.user_id = #{userId}
        and f.deleted = 0
        and p.province_adcode = #{adcode}
        order by m.original_date_time desc
    </select>
    <select id="selectPageWithFile" resultType="com.ginDriver.main.domain.vo.MediaVO">
        select m.id,
        m.file_id,
        m.width,
        m.height,
        m.mime_type,
        m.original_date_time,
        m.adcode,
        m.longitude,
        m.latitude,
        m.model,
        f.user_id,
        f.create_time,
        f.update_time,
        f.type,
        f.status,
        f.self,
        f.name fileName,
        f.create_time,
        f.update_time,
        u.username,
        from media m
        right join file f on m.file_id = f.id
        left join user u on f.user_id = u.id
        <where>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="isSelf != null">
                and f.self = #{isSelf}
            </if>
        </where>
    </select>
</mapper>
