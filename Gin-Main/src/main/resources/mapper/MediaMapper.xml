<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="duegin.ginDriver.mapper.MediaMapper">

    <resultMap id="BaseResultMap" type="duegin.ginDriver.domain.po.Media">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <id property="userId" column="user_id" jdbcType="BIGINT"/>
        <result property="fileName" column="file_name" jdbcType="VARCHAR"/>
        <result property="type" column="type" jdbcType="INTEGER"/>
        <result property="src" column="src" jdbcType="VARCHAR"/>
        <result property="url" column="url" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="TINYINT"/>
        <result property="isShare" column="is_share" jdbcType="TINYINT"/>
        <result property="format" column="format" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,user_id,file_name,type,
        src,`status`,is_share,
        `format`,create_time,update_time
    </sql>
    <insert id="insertOrUpdateByMe">
        insert into media
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="fileName != null">fileName,</if>
            <if test="type != null">type,</if>
            <if test="src != null">src,</if>
            <if test="status != null">`status`,</if>
            <if test="isShare != null">isShare,</if>
            <if test="format != null">`format`,</if>
        </trim>
        <trim prefix="values(" suffixOverrides="," suffix=")">
            <if test="fileName != null">#{fileName},</if>
            <if test="type != null">#{type},</if>
            <if test="src != null">#{src},</if>
            <if test="status != null">#{status},</if>
            <if test="isShare != null">#{isShare},</if>
            <if test="format != null">#{format},</if>
        </trim>
        ON DUPLICATE KEY UPDATE
        <trim suffixOverrides=",">
            <if test="fileName != null">file_name = #{fileName},</if>
            <if test="type != null">type = #{type},</if>
            <if test="src != null">src = #{src},</if>
            <if test="status != null">`status` = #{status},</if>
            <if test="isShare != null">isShare = #{isShare},</if>
            <if test="format != null">`format` = #{format},</if>
        </trim>
    </insert>
    <delete id="deleteByMediaId">
        delete
        from media
        where id = #{id};
    </delete>
    <select id="selectByUserId" resultType="duegin.ginDriver.domain.po.Media">
        select <include refid="Base_Column_List"/>
        from media
        user_id = #{userId};
    </select>
</mapper>
