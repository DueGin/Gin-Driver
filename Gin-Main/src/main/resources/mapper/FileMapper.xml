<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ginDriver.main.mapper.FileMapper">

    <resultMap id="BaseResultMap" type="com.ginDriver.main.domain.po.File">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="md5" column="md5" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="userId" column="user_id" jdbcType="BIGINT"/>
        <result property="status" column="status" jdbcType="TINYINT"/>
        <result property="type" column="type" jdbcType="INTEGER"/>
        <result property="self" column="self" jdbcType="TINYINT"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="deleted" column="deleted" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,md5,`name`,
        user_id,`status`,self,type,
        create_time,update_time,deleted
    </sql>

    <sql id="File_Column_List">
        ${als}md5,
        ${als}`name`,
        ${als}user_id,
        ${als}`status`,
        ${als}self,
        ${als}type,
        ${als}create_time,
        ${als}update_time,
        ${als}deleted
    </sql>
    <update id="updateDeletedByIds">
        update `file`
        set deleted = #{deleted}
        where id in
        <foreach collection="ids" open="(" close=")" separator="," item="item">
            #{item}
        </foreach>
    </update>
    <delete id="removeById">
        delete
        from file
        where id = #{id}
    </delete>
    <delete id="removeByIds">
        delete
        from file
        where id in
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>
    <select id="getById" resultType="com.ginDriver.main.domain.po.File">
        select <include refid="Base_Column_List"/>
        from file
        where id = #{id}
    </select>
    <select id="selectAllByIds" resultType="com.ginDriver.main.domain.po.File">
        select <include refid="Base_Column_List"/>
        from file
        where id in
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </select>

</mapper>
