<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ginDriver.main.mapper.UserMapper">

    <resultMap id="UserBaseResultMap" type="com.ginDriver.core.domain.po.User">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="userAccount" column="user_account" jdbcType="VARCHAR"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="avatar" column="avatar" jdbcType="VARCHAR"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <resultMap id="SysUserVOBaseResultMap" type="com.ginDriver.main.domain.vo.SysUserVO">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="userAccount" column="user_account" jdbcType="VARCHAR"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="User_Base_Column_List">
        id,user_account,username,`password`,avatar,phone,email,create_time,update_time
    </sql>
    <insert id="insertUserRole">
        insert into user_role(user_id, role_id) VALUE(#{userId}, #{roleId});
    </insert>
    <update id="updateUserById">
        update user
        <trim prefix="set " suffixOverrides=",">
            <if test="username != null">username = #{username},</if>
            <if test="password != null">`password` = #{password},</if>
            <if test="phone != null">`phone` = #{phone},</if>
            <if test="email != null">`email` = #{email},</if>
        </trim>
        where id = #{id};
    </update>
    <delete id="deleteByUserId">
        delete
        from user
        where id = #{id};
    </delete>
    <select id="selectByUserId" resultType="com.ginDriver.core.domain.po.User" resultMap="UserBaseResultMap">
        select
        <include refid="User_Base_Column_List"/>
        from user
        where id = #{id}
    </select>
    <select id="selectByUsername" resultType="com.ginDriver.core.domain.po.User" resultMap="UserBaseResultMap">
        select
        <include refid="User_Base_Column_List"/>
        from user
        where username = #{username}
    </select>
    <select id="page" resultType="com.ginDriver.core.domain.po.User" resultMap="UserBaseResultMap">
        select
        <include refid="User_Base_Column_List"/>
        from user
        where deleted = 0
        <if test="user.id != null">and id = #{user.id}</if>
        <if test="user.username != null">and username like CONCAT('%', #{user.username}, '%')</if>
        <if test="user.phone != null">and phone like CONCAT('%', #{user.phone}, '%')</if>
        <if test="user.email != null">and email = #{user.email}</if>
        <if test="user.createTime != null">and create_time = #{user.createTime}</if>
        <if test="user.updateTime != null">and update_time = #{user.updateTime}</if>
        limit #{pageStart}, #{pageSize}
    </select>
    <select id="count" resultType="java.lang.Integer">
        select count(*)
        from user
        <where>
            <if test="id != null">and id = #{id}</if>
            <if test="username != null">and username = #{username}</if>
            <if test="phone != null">and phone = #{phone}</if>
            <if test="email != null">and email = #{email}</if>
            <if test="createTime != null">and create_time = #{createTime}</if>
            <if test="updateTime != null">and update_time = #{updateTime}</if>
        </where>
    </select>
</mapper>
